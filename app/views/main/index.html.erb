<% @cards.each do |c| %>
    <img src="<%= c.image %>" /><%= c.name %>&nbsp;<%= c.card_type.name %><br />
<% end %>
<hr />
<% @second_player_cards.each do |c| %>
    <% if @player.to_int == 2 %>
        <% if (@cards_on_table.empty?) or (not @cards_on_table.last.nil? and c.can_kick_card?(@cards_on_table.last['card'])) %>
            <%= link_to c.name, :controller => :main, :action => :do_answer, :card_id => c.id, :player_id => 2 %>
        <% end %>
    <% else %>
        <%= c.name %>
    <% end %>
    &nbsp;<%= c.card_type.name %><br />
<% end %>
<hr />
Trump card: <%= @trump_card.name %> of <%= @trump_card.card_type.name %>
<hr />
Set (<%= @cards_set.length %>):<br />
<% @cards_set.each do |c| %>
    <%= c.name %>&nbsp;<%= c.card_type.name %><br />
<% end %>
<hr />

<% @cards_on_table.each do |c| %>
    <%= c['card'].name %>&nbsp;<%= c['card'].card_type.name %><br />
<% end %>

<%= link_to "Make clear", :controller => :main, :action => :make_clear %>
<%= link_to "Make mine", :controller => :main, :action => :make_mine %>
<%= link_to "Make move", :controller => :main, :action => :next_player_move %>